generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ShortLink {
  id          String   @id @default(cuid())
  userId      String   // Clerk user ID
  originalUrl String
  shortCode   String   @unique
  alias       String?
  clicks      Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([shortCode])
}

